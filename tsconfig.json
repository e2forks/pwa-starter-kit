{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "outDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*", "node_modules/*"]
    }
  },
  "include": [
    "ts/*.ts",
    "ts/**/*.ts"
  ]
}
